<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.example.draqo.kekelevbsuirmoney.MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="texte xtetete" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tabl_valuti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="@string/tabl_valuti"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bank_buys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/bank_pokupaet"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bank_sells"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/table_bank_sells"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/usa_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="доллар США"
                android:textAlignment="center"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/usa_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                tools:text="TextView" />

            <TextView
                android:id="@+id/usa_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                tools:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/eu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Евро"
                android:textAlignment="center"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/eu_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                tools:text="TextView" />

            <TextView
                android:id="@+id/eu_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                tools:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 рос. руб."
                android:textAlignment="center"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/rus_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                tools:text="TextView" />



            <TextView
                android:id="@+id/rus_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                tools:text="TextView" />
        </TableRow>

    </TableLayout>
</LinearLayout>
